{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./types"]
  }
}
